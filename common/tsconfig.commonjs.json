{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2021.String"],
    "outDir": "dist/commonjs",
    "declaration": true,
    "target": "ES2015",
    "module": "commonjs"
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*"]
}
