{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "ES2021"],
    "outDir": "dist/module",
    "declaration": true,
    "target": "es2017"
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*"]
}
